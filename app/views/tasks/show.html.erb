<h1> <%=@task.title%> </h1>

<div class='details'>
  <p class='text'> <%=@task.details%> </p>
</div>

<div class='form'>
  <% checked = @task.completed? ? "checked" : "" %>
  <li class="form-check">
    <input class="form-check-input" type="checkbox" value="" id="checkbox<%@task.id%>" <%=checked%>>
    <label class="form-check-label" for="checkbox<%@task.id%>">
      <%if checked%>
        <p> This is completed </p>
      <%else%>
        <p> This is not completed </p>
      <%end%>
    </label>
  </li>
</div>

<div class="solid"> </div>

<%= link_to 'Back to list', tasks_path %>

<%= link_to 'Edit', edit_task_path, class: "btn btn-primary" %>
